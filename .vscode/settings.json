{
	"editor.quickSuggestions": {
		"strings": "on"
	},
	"files.associations": {
		"*.css": "tailwindcss",
		"*.scss": "tailwindcss"
	},
	"tailwindCSS.emmetCompletions": true,
	"tailwindCSS.experimental.configFile": {
		"apps/portfolio/tailwind.config.js": [
			"apps/portfolio/**",
			"libs/portfolio/**/ui/**",
			"libs/shared/**/ui/**"
		],
		"apps/blog/tailwind.config.js": [
			"apps/blog/**",
			"libs/blog/**/ui/**",
			"libs/shared/**/ui/**"
		]
	},
	"conventionalCommits.scopes": ["portfolio", "global", "blog"]
}
