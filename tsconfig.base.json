{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": ".",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2015",
		"module": "esnext",
		"lib": ["es2020", "dom"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@portfolio/portfolio-features": ["libs/portfolio/features/src/index.ts"],
			"@portfolio/portfolio-features/server": [
				"libs/portfolio/features/src/server.ts"
			],
			"@portfolio/portfolio-types": ["libs/portfolio/types/src/index.ts"],
			"@portfolio/portfolio-ui": ["libs/portfolio/ui/src/index.ts"],
			"@portfolio/portfolio-ui/server": ["libs/portfolio/ui/src/server.ts"],
			"@portfolio/portfolio-utils": ["libs/portfolio/utils/src/index.ts"],
			"@portfolio/shared-ui": ["libs/shared/ui/src/index.ts"],
			"@portfolio/shared-ui/server": ["libs/shared/ui/src/server.ts"],
			"@portfolio/utils": ["libs/shared/utils/src/index.ts"]
		}
	},
	"files": ["./sst-env.d.ts"],
	"exclude": ["node_modules", "tmp"]
}
